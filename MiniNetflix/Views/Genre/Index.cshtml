@model IEnumerable<Application.ViewModel.GenreViewModel>

@{
    ViewData["Title"] = "Géneros";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-white" style="font-family: 'Poppins', sans-serif; font-size: 3rem; font-weight: 600;">
            Géneros
        </h2>
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-lg rounded-pill px-4">Crear Nuevo Género</a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger shadow-sm">
            @TempData["ErrorMessage"]
        </div>
    }

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var genre in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card bg-dark text-white shadow-lg rounded-3 h-100">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h5 class="card-title" style="font-size: 1.5rem;">@genre.Name</h5>
                            <div class="d-flex justify-content-between mt-3">
                                <a asp-action="Detail" asp-route-id="@genre.Id" class="btn btn-info rounded-pill px-3">Detalles</a>
                                <a asp-action="Edit" asp-route-id="@genre.Id" class="btn btn-warning rounded-pill px-3">Editar</a>
                                <button type="button" class="btn btn-danger rounded-pill px-3" data-bs-toggle="modal" data-bs-target="#deleteModal-@genre.Id">
                                    Eliminar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Delete Modal -->
                <div class="modal fade" id="deleteModal-@genre.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@genre.Id" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content bg-dark text-white">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel-@genre.Id">Confirmar Eliminación</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                            </div>
                            <div class="modal-body">
                                ¿Estás seguro de que deseas eliminar este género?
                            </div>
                            <div class="modal-footer">
                                <form asp-action="Delete" method="post">
                                    <input type="hidden" name="id" value="@genre.Id" />
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                    <button type="submit" class="btn btn-danger">Eliminar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center shadow-sm mt-4">
            No hay géneros disponibles.
        </div>
    }
</div>
