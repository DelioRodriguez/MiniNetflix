@model Application.ViewModel.SeriesViewModel

<div class="container mt-4" style="background-color: #141414; color: #FFFFFF; border-radius: 8px; padding: 20px;">
    <h2 class="text-center" style="font-family: 'Poppins', sans-serif; font-size: 3rem; font-weight: 600; text-transform: uppercase; color: #E50914;">
        @Model.Name
    </h2>
    
    <div class="position-relative mb-4">
        <iframe width="100%" height="500" src="@Html.Raw(Model.VideoLink)" frameborder="0" allowfullscreen style="border-radius: 8px;" allow="autoplay; encrypted-media"></iframe>
    </div>


    <div class="mt-3 text-center">
        <a href="/" class="btn btn-danger" style="border-radius: 20px; padding: 10px 20px;">Volver atrás</a>
    </div>
</div>

<style>
    /* Additional custom styles */
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        border-radius: 8px;
    }

    .btn-danger {
        background-color: #E50914;
        border: none;
        transition: background-color 0.3s;
    }

    .btn-danger:hover {
        background-color: #c4060f;
    }
</style>