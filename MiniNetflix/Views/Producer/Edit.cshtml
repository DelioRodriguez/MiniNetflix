@model Application.ViewModel.ProducerViewModel

@{
    ViewData["Title"] = "Editar Productor";
}

<div class="container mt-4">
    <h2 class="text-white" style="font-family: 'Poppins', sans-serif; font-size: 3rem; font-weight: 600;">
        Editar Productor
    </h2>

    <div class="mt-4 p-4 bg-dark shadow-lg rounded-3">
        <form asp-action="Edit" method="post">
            <div class="form-group mb-4">
                <label asp-for="Name" class="text-white" style="font-size: 1.2rem;"></label>
                <input asp-for="Name" class="form-control form-control-lg bg-secondary text-white" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <input type="submit" value="Guardar" class="btn btn-success btn-lg rounded-pill px-4" />
                <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill px-4">Volver al Listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}