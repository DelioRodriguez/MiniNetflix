@model Application.ViewModel.ProducerViewModel

@{
    ViewData["Title"] = "Crear Productor";
}

<div class="container mt-4">
    <h2 class="text-white" style="font-family: 'Poppins', sans-serif; font-size: 3rem; font-weight: 600;">
        Crear Productor
    </h2>

    <form asp-action="Create" method="post" class="mt-4 shadow-lg p-4 bg-dark rounded-3">
        <div class="form-group mb-3">
            <label asp-for="Name" class="form-label text-white" style="font-size: 1.2rem;">Nombre del Productor</label>
            <input asp-for="Name" class="form-control bg-secondary text-white rounded-pill" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-between">
            <input type="submit" value="Crear" class="btn btn-primary btn-lg rounded-pill px-4" />
            <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill px-4">Volver al Listado</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}